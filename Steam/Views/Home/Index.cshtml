                                                                                                             InsertionMode = InsertionMode.Replace})
        </li>
        <li>
            @Ajax.ActionLink("Top selling", "Tabs", "Home", new { typeOfTab = "Top Selling" }, new AjaxOptions() { HttpMethod = "GET",
                                                                            UpdateTargetId = "game-tabs2",
                                                                            InsertionMode = InsertionMode.Replace})
    </li>
    <li>
        @Ajax.ActionLink("Specials", "Tabs", "Home", new { typeOfTab = "Specials" }, new AjaxOptions() {
                                                                                   HttpMethod = "GET",
                                                                                   UpdateTargetId = "game-tabs3",
                                                                                   InsertionMode = InsertionMode.Replace})</a>
    </li>
    </ul>
    <div id="game-tabs1">
        @Html.Partial("Tabs");

    </div>
