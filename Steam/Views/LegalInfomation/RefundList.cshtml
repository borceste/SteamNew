
@{
    ViewBag.Title = "RefundList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Styles.Render(@"~\Content\bootstrap.min.css")
@Styles.Render(@"~\Content\CSS\hrBackground.css")
@Styles.Render("~/Content/css")
<div id="container">
    <h1 id="title">STEAM REFUNDS</h1>
    <h3 style="color:white;">Payment Methods</h3>
    <hr class="hrLine" />
    <div id="content" class=".col-md-4 .col-md-offset-2">
        <p>
            Some payment methods available through Steam do not support refunding a purchase back to the original payment method. For these purchases, refunds can only be issued to the user's Steam Wallet.
        </p>
        <p>
            In your country, the following payment methods support refunds:
        </p>
        <ul style="list-style-type:circle">
            <li>PayPal</li>
            <li>Visa</li>
            <li>MasterCard</li>
            <li>American Express</li>
            <li>JCB</li>
        </ul>
        <p>For more information about refunds on Steam, please see the @Html.ActionLink("Steam Refunds page", "SteamRefunds", "LegalInfomation").</p>
    </div>
</div>


